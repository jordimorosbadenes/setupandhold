---
import BaseLayout from '../layouts/BaseLayout.astro';
import { withBase } from '../utils/withBase';
---
<BaseLayout title="Página no encontrada" description="La página no existe" hideNav={true}>
  <section class="hero" style="text-align: center; gap: 8px;">
    <h1>404</h1>
    <p class="prose">No encontramos lo que buscabas. Vuelve al inicio.</p>
    <a class="button" href={withBase('/')}>Volver</a>
  </section>
</BaseLayout>
