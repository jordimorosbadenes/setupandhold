---
import BaseLayout from '../layouts/BaseLayout.astro';
import PostCard from '../components/PostCard.astro';
import Mini2048 from '../components/mini2048/Mini2048.astro';
import { getCollection } from 'astro:content';
import { withBase } from '../utils/withBase';

const allPosts = (await getCollection('blog', ({ data }) => !data.draft)).sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);
// Elementos con el slug "pinned"
const pinned = allPosts
  .filter((p) => p.data?.pinned)
  .sort((a, b) => (a.data.pinned_order ?? 0) - (b.data.pinned_order ?? 0));
// Coger los 3 posts más recientes
const latest = allPosts.filter((p) => !p.data?.pinned).slice(0, 3);
---
<BaseLayout title="setupandhold" description="Bitácora sobre tecnología y aficiones.">
  <section class="home-layout">
    <div class="home-main">
      <section class="hero">
        <div class="hero-copy prose">
          <h1>Setup & Hold</h1>
          <p>
            Bitácora ligera para documentar ideas, experimentos y proyectos.
          </p>
          <div class="hero-actions">
            <a class="button" href={withBase('/posts')}>Leer el blog</a>
            <a class="button secondary" href={withBase('/puzzle')} rel="prefetch">Puzzle Generator</a>
            <a class="button secondary" href={withBase('/mousepad')}>Alfombrilla ASIC</a>
          </div>
        </div>
      </section>

      {pinned.length ? (
        <>
          <div class="section-title">
            <h2>Entradas destacadas</h2>
            <a class="button secondary" href={withBase('/posts')}>Ver todas</a>
          </div>
          <div class="post-grid">
            {pinned.map((post) => <PostCard post={post} />)}
          </div>
        </>
      ) : null}

      <div class="section-title">
        <h2>Entradas recientes</h2>
        <a class="button secondary" href={withBase('/posts')}>Ver todas</a>
      </div>
      <div class="post-grid">
        {latest.map((post) => <PostCard post={post} />)}
      </div>
    </div>

    <aside class="home-side" aria-label="Juego 2048">
      <Mini2048 />
    </aside>
  </section>
</BaseLayout>

<style>
  .hero-copy {
    display: grid;
    gap: 16px;
  }

  .hero-copy > p {
    margin: 0;
  }

  .hero-copy > h1 {
    margin: 0;
  }

  .home-layout {
    display: grid;
    grid-template-columns: minmax(0, 1fr) auto;
    gap: 24px;
    align-items: start;
  }

  .home-side {
    width: 300px;
    max-width: 300px;
    justify-self: end;
  }

  @media (max-width: 900px) {
    .home-layout {
      grid-template-columns: 1fr;
    }

    .home-side {
      width: 100%;
      max-width: none;
      justify-self: stretch;
    }
  }
</style>
