---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PostCard from '../../components/PostCard.astro';
import { getCollection } from 'astro:content';

const { tag } = Astro.params;
const posts = (await getCollection('blog', ({ data }) => !data.draft && data.tags?.length))
  .filter((post) => post.data.tags.map((t) => t.toLowerCase()).includes(tag?.toLowerCase() || ''))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---
<BaseLayout title={`Entradas en ${tag}`} description={`ArtÃ­culos etiquetados como ${tag}`}>
  <div class="section-title">
    <h2>#{tag}</h2>
    <span class="pill">{posts.length} entradas</span>
  </div>
  {posts.length ? (
    <div class="post-grid">
      {posts.map((post) => <PostCard post={post} />)}
    </div>
  ) : (
    <p class="prose">No hay entradas con esta etiqueta.</p>
  )}
</BaseLayout>
